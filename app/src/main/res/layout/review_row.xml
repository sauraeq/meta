<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/review_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/review_profile_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle"
            android:src="@drawable/review_profile_img" />

        <TextView
            android:id="@+id/jhon_parkin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/review_profile_img"
            android:fontFamily="@font/lato_regular"
            android:text="Jhon Parkins"
            android:textColor="@color/hex"
            android:textSize="@dimen/_14sdp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/review_profile_img">

            <ImageView
                android:id="@+id/review_one_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/review_star" />

            <ImageView
                android:id="@+id/review_two_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toEndOf="@id/review_one_star"
                android:src="@drawable/review_star" />

            <ImageView
                android:id="@+id/review_three_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toEndOf="@id/review_two_star"
                android:src="@drawable/review_star" />

            <ImageView
                android:id="@+id/review_four_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toEndOf="@id/review_three_star"
                android:src="@drawable/review_star" />

            <ImageView
                android:id="@+id/review_half_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toEndOf="@id/review_four_star"
                android:src="@drawable/review_half_star" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/lato_regular"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit.Enim, amet a accumsan eget justo etiam viverra. Magna hendrerit elit vel erat semper."
                android:textColor="@color/hex"
                android:textSize="@dimen/_12sdp" />

        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>