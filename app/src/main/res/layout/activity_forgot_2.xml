<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:src="@drawable/newpassword" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:fontFamily="@font/lato_medium"
        android:text="Create New Password"
        android:textColor="@color/hex"
        android:textSize="17sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_regular"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/new_pasrd_diferent"
        android:textColor="@color/grey5"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/gray_reactangle">

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="50dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/lato_regular"
            android:gravity="center_vertical"
            android:hint="@string/new_password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="10dp"
            android:paddingHorizontal="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/gray3"
            android:textSize="14sp" />
        <ImageView
            android:id="@+id/ivEye1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/eye_icon"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/gray_reactangle">

        <EditText
            android:id="@+id/etcnfmPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="50dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/lato_regular"
            android:gravity="center_vertical"
            android:hint="@string/cnfm_password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="10dp"
            android:paddingHorizontal="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/gray3"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/ivEye2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/eye_icon"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tvSave"
        android:layout_width="250dp"
        android:layout_height="47dp"
        android:background="@drawable/rectangle_black"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="@string/Save"
        android:fontFamily="@font/lato_medium"
        android:textSize="17sp"
        android:textColor="@color/white"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>

<RelativeLayout
android:id="@+id/rlLoader"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:clickable="true"
android:visibility="gone">

<include layout="@layout/loader_layout" />

</RelativeLayout>
</RelativeLayout>