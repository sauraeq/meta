<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <include layout="@layout/header_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="109dp"
                    android:layout_height="123dp"
                    android:layout_weight="0.5">

                    <ImageView
                        android:layout_width="@dimen/_76sdp"
                        android:layout_height="@dimen/_76sdp"
                        android:src="@drawable/unsplash" />

                    <ImageView
                        android:id="@+id/edit_profile"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_marginStart="@dimen/_54sdp"
                        android:layout_marginTop="@dimen/_54sdp"
                        android:layout_marginEnd="@dimen/_54sdp"
                        android:layout_marginBottom="@dimen/_54sdp"
                        android:src="@drawable/edit_profile" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_medium"
                        android:text="John Smith"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20ssp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_13sdp"
                            android:layout_height="@dimen/_13sdp"
                            android:src="@drawable/map" />

                        <TextView
                            android:id="@+id/tvAddres"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_regular"
                            android:text="@string/address"
                            android:textColor="@color/grey2"
                            android:textSize="@dimen/_11ssp"
                            android:layout_marginLeft="5dp"/>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical">

            <TextView
                android:id="@+id/tvNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/number"
                android:fontFamily="@font/lato_medium"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_20sdp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/hintcolor"
                    android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tvGmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gmail"
                android:fontFamily="@font/lato_regular"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_20sdp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/hintcolor"
                    android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/et_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amit"
                android:fontFamily="@font/lato_regular"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_20sdp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/hintcolor"
                    android:layout_marginTop="10dp"/>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>







