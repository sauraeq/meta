<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical"
    tools:context=".Add_Address.Add_Address">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">
        <RelativeLayout
            android:id="@+id/rlBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="@dimen/_6sdp"
                android:src="@drawable/right_arrow" />
        </RelativeLayout>



        <TextView
            android:layout_width="@dimen/_210sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:fontFamily="@font/lato_medium"
            android:text="Add Shipping Addresses"
            android:textColor="@color/black2"
            android:textSize="@dimen/_19ssp" />

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"

                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="@dimen/_285sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_company_name"
                            android:layout_width="@dimen/_285sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:background="@drawable/border_gray2"
                            android:backgroundTint="@color/white"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="@dimen/_13sdp"
                            android:hint="Companyâ€™s Name (Optional)" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="@dimen/_285sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_name"
                            android:layout_width="@dimen/_285sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:background="@drawable/border_gray2"
                            android:backgroundTint="@color/white"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="@dimen/_13sdp"
                            android:hint="@string/Name" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/_285sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_phone_number"
                            android:layout_width="@dimen/_285sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:background="@drawable/border_gray2"
                            android:backgroundTint="@color/white"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="@dimen/_13sdp"
                            android:hint="Phone Number" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_47sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_pincode"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="@dimen/_47sdp"
                            android:background="@drawable/border_gray2"
                            android:backgroundTint="@color/white"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="@dimen/_13sdp"
                            android:hint="Pincode" />

                        <EditText
                            android:id="@+id/et_landmark"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="@dimen/_47sdp"
                            android:background="@drawable/border_gray2"
                            android:backgroundTint="@color/white"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="@dimen/_13sdp"
                            android:hint="Landmark" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/_285sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_address_area"
                            android:layout_width="@dimen/_285sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:background="@drawable/border_gray2"
                            android:backgroundTint="@color/white"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="@dimen/_13sdp"
                            android:hint="Address (Area and Street)" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_47sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_city"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="@dimen/_47sdp"
                            android:background="@drawable/border_gray2"
                            android:backgroundTint="@color/white"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="@dimen/_13sdp"
                            android:hint="City/District/Town" />

                        <EditText
                            android:id="@+id/et_state"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="@dimen/_47sdp"
                            android:background="@drawable/border_gray2"
                            android:backgroundTint="@color/white"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="@dimen/_13sdp"
                            android:hint="State" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_210sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_gravity="center"
                            app:cardBackgroundColor="@color/black"
                            app:cardCornerRadius="@dimen/_16sdp">


                            <TextView
                                android:id="@+id/add_address"
                                android:layout_width="@dimen/_250sdp"
                                android:layout_height="64dp"
                                android:layout_gravity="center"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:backgroundTint="@color/black2"
                                android:fontFamily="@font/lato_regular"
                                android:text="@string/Save"
                                android:textSize="@dimen/_17sdp" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>




            </ScrollView>

        </LinearLayout>
    </LinearLayout>





</LinearLayout>

